{
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"version": "2.2",
	"author": "Eason Wong",
	"homepage_url": "https://github.com/easonwong-de/Adaptive-Tab-Bar-Colour",
	"default_locale": "en",
	"browser_specific_settings": {
		"gecko": {
			"id": "ATBC@EasonWong",
			"strict_min_version": "112.0"
		}
	},
	"permissions": ["activeTab", "tabs", "theme", "storage", "browserSettings", "management"],
	"background": {
		"scripts": ["background.js"],
		"type": "module",
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["atbc.js"]
		}
	],
	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_title": "__MSG_extensionName__",
		"browser_style": true,
		"default_icon": {
			"16": "images/ATBC_16.png",
			"32": "images/ATBC_32.png",
			"48": "images/ATBC_48.png",
			"96": "images/ATBC_96.png",
			"128": "images/ATBC_128.png"
		}
	},
	"icons": {
		"16": "images/ATBC_16.png",
		"32": "images/ATBC_32.png",
		"48": "images/ATBC_48.png",
		"96": "images/ATBC_96.png",
		"128": "images/ATBC_128.png"
	},
	"manifest_version": 2
}
